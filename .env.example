# .env.example - environment variables for local development

# Server settings
SERVER_PORT=5000
DATABASE_URL="file:../data/warren.db"
CLAUDE_API_KEY=your_claude_api_key_here

# MailHog settings
MAILHOG_SMTP_HOST=localhost
MAILHOG_SMTP_PORT=1025
MAILHOG_HTTP_PORT=8025

# Optional TLS (requires mkcert-generated certs)
# SSL_CERT_PATH=./certs/localhost.pem
# SSL_KEY_PATH=./certs/localhost-key.pem

# Google Slides API (for Sprint 4 exports)
# Path to your Google service account JSON key
GOOGLE_APPLICATION_CREDENTIALS=./path/to/service-account-key.json
# The ID of your Slides template presentation
GOOGLE_SLIDES_TEMPLATE_ID=your_slides_template_id_here

# Ngrok (for external tunneling)
# Auth token from your ngrok account (optional)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here